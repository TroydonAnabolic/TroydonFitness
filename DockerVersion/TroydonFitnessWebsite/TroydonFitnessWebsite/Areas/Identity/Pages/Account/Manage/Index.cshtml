@page
@using TroydonFitnessWebsite.Areas.Identity.Data.CustomIdentityConfig.IdentityModel
@model IndexModel

@{
    Layout = "_Layout.cshtml";
}

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<aside>
    Your Role: @User.Identities.First(
u => u.IsAuthenticated &&
u.HasClaim(c => c.Type == JwtClaimTypes.Role)).FindFirst(JwtClaimTypes.Role).Value
</aside>

<hr />

<form id="profile-form" method="post">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            @* Personal details begin *@

        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.AddressLine1"></label>
                <input asp-for="Input.AddressLine1" class="form-control" />
                <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Input.AddressLine2"></label>
                <input asp-for="Input.AddressLine2" class="form-control" />
                <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.State"></label>
                <input asp-for="Input.State" class="form-control" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Zip"></label>
                <input asp-for="Input.Zip" class="form-control" />
                <span asp-validation-for="Input.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfBirth"></label>
                <input asp-for="Input.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.LabelFor(x => x.Input.Gender) :
                    @Html.RadioButtonFor(x => x.Input.Gender, "Male") Male
                    @Html.RadioButtonFor(x => x.Input.Gender, "Female") Female
                    @Html.ValidationMessageFor(x => x.Input.Gender)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.LabelFor(x => x.Input.ActivityType) :
                    @Html.RadioButtonFor(x => x.Input.ActivityType, "Sedentary") Sedentary
                    @Html.RadioButtonFor(x => x.Input.ActivityType, "LightExercise") LightExercise
                    @Html.RadioButtonFor(x => x.Input.ActivityType, "ModerateExercise") ModerateExercise
                    @Html.RadioButtonFor(x => x.Input.ActivityType, "HeavyExercise") HeavyExercise
                    @Html.RadioButtonFor(x => x.Input.ActivityType, "Athlete") Athlete
                    @Html.ValidationMessageFor(x => x.Input.ActivityType)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Input.Height"></label>
                <input asp-for="Input.Height" class="form-control" />
                <span asp-validation-for="Input.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Weight"></label>
                <input asp-for="Input.Weight" class="form-control" />
                <span asp-validation-for="Input.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Bodyfat"></label>
                <input asp-for="Input.Bodyfat" class="form-control" />
                <span asp-validation-for="Input.Bodyfat" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}