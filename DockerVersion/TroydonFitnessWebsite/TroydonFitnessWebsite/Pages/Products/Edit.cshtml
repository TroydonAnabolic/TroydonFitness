@page
@model TroydonFitnessWebsite.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_ProductsLayout.cshtml";
}

    <h1>Edit</h1>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Product.ProductID" />
                <div class="form-group">
                    <label asp-for="Product.ProductID" class="control-label"></label>

                    @*  TODO: Put this in a partial page as it needs to show in each product update page. *@
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Title" class="control-label"></label>
                    <input asp-for="Product.Title" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ShortDescription" class="control-label"></label>
                    <input asp-for="Product.ShortDescription" class="form-control" />
                    <span asp-validation-for="Product.ShortDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Quantity" class="control-label"></label>
                    <input asp-for="Product.Quantity" class="form-control" />
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Product.HasStock)

                        @Html.LabelFor(x => x.Product.HasStock) :
                        @Html.RadioButtonFor(x => x.Product.HasStock, "Available") Available
                        @Html.RadioButtonFor(x => x.Product.HasStock, "Unavailable") Unavailable
                        @Html.RadioButtonFor(x => x.Product.HasStock, "ComingSoon") ComingSoon
                        @Html.ValidationMessageFor(x => x.Product.HasStock)
                    </label>
                </div>
                @*<div class="form-group">
                    <label asp-for="Product.LastUpdated" class="control-label"></label>
                    <input asp-for="Product.LastUpdated" class="form-control" />
                    <span asp-validation-for="Product.LastUpdated" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
