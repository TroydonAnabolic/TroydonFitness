@page
@model TroydonFitness.Pages.Diets.EditModel

@{
    ViewData["Title"] = "Edit";
}


<div class="post-wrap text-dark">

    <h1>Edit</h1>

    <h4>Diet</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Diet.Id" />
                <div class="form-group">
                    <label asp-for="Diet.DietType" class="control-label"></label>
                    <select asp-for="Diet.DietType" class="form-control"></select>
                    <span asp-validation-for="Diet.DietType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Diet.TrainingEquipment.Brand" class="control-label"></label>
                    <input asp-for="Diet.TrainingEquipment.Brand" class="form-control" />
                    <span asp-validation-for="Diet.TrainingEquipment.Brand" class="text-danger" />
                </div>
                <div class="form-group">
                    <div class="table">
                        <table>
                            <tr>
                                @{
                                    int cnt = 0;

                                    foreach (var supplementData in Model.AssignedSupplementDataList)
                                    {
                                        if (cnt++ % 3 == 0)
                                        {
                                        @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox"
                                                   name="selectedCourses"
                                                   value="@supplementData.SupplementID"
                                                   @(Html.Raw(supplementData.Assigned ? "checked=\"checked\"" : "")) />
                                            @supplementData.SupplementID @:  @supplementData.SupplementTitle
                                        @:</td>
                                    }
                                @:</tr>
                                }
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="./Index">Back to List</a>
        </div>

    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
