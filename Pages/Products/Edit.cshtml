@page "{id:int}"
@model TroydonFitness.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}


<div class="post-wrap text-dark">

    <h1>Edit</h1>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Product.ProductID" />
                <input type="hidden" asp-for="Product.RowVersion" />
                <div class="form-group">
                    <label>RowVersion</label>
                    @Model.Product.RowVersion[7]
                </div>
                <div class="form-group">
                    <label asp-for="Product.Title" class="control-label"></label>
                    <input asp-for="Product.Title" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Description" class="control-label"></label>
                    <input asp-for="Product.Description" class="form-control" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Quantity" class="control-label"></label>
                    <input asp-for="Product.Quantity" class="form-control" />
                    <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.HasStock" class="control-label"></label>
                    @Html.DropDownListFor(s => s.Product.HasStock,
                        new SelectList(Enum.GetValues(typeof(CreateModel.Availability))),
                        "Select Stock Availability")
                    <span asp-validation-for="Product.HasStock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProductAdded" class="control-label"></label>
                    <input asp-for="Product.ProductAdded" class="form-control" />
                    <span asp-validation-for="Product.ProductAdded" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Instructor</label>
                    <select asp-for="Product.DietID" class="form-control"
                            asp-items="@Model.DietNameSL"></select>
                    <span asp-validation-for="Product.DietID" class="text-danger">
                    </span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>